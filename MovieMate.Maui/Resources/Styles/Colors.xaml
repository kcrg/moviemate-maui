<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Light Colors  -->
    <Color x:Key="BackgroundColorLight">#e0e0e0</Color>
    <Color x:Key="ControlsBackgroundColorLight">#f2f2f2</Color>
    <Color x:Key="ContrastColorLight">#31344b</Color>
    <Color x:Key="MediumContrastColorLight">DarkGray</Color>
    <Color x:Key="LowContrastColorLight">LightGray</Color>
    <Color x:Key="FirstShadowLight">#ffffff</Color>
    <Color x:Key="SecondShadowLight">#9d9d9d</Color>

    <!--  Dark Colors  -->
    <Color x:Key="BackgroundColorDark">#303030</Color>
    <Color x:Key="ControlsBackgroundColorDark">#292929</Color>
    <Color x:Key="ContrastColorDark">LightGray</Color>
    <Color x:Key="MediumContrastColorDark">Gray</Color>
    <Color x:Key="LowContrastColorDark">DarkGray</Color>
    <Color x:Key="FirstShadowDark">#4d4d4d</Color>
    <Color x:Key="SecondShadowDark">#131313</Color>

</ResourceDictionary>
